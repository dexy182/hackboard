<h1>New Post</h1>

<%= form_for @post, :url => posts_path, html: {multipart: true} do |f| %>

<div>
	<%= f.label :image %>
	<%= f.file_field :image %>

<div>
	<%= f.label :description %>
	<%= f.text_area :description %>
</div>

<div>
	<%= f.label :link %>
	<%= f.text_field :link %>
</div>

	<%= f.submit %>

<% end %> 